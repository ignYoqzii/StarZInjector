<Page
    x:Class="StarZInjector.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarZInjector.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ui:CardControl
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Icon="{ui:SymbolIcon Apps24}">
            <ui:CardControl.Header>
                <ui:TextBlock
                    FontTypography="Body"
                    Text="App Executable Name" />
            </ui:CardControl.Header>
            <ui:TextBox
                Text="{Binding ViewModel.ExeName, Mode=TwoWay}"
                Width="200"
                x:Name="AppNameTextBox"
                PlaceholderText="Enter EXE name" />
        </ui:CardControl>

        <ui:CardControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Icon="{ui:SymbolIcon Document24}">
            <ui:CardControl.Header>
                <ui:TextBlock
                    FontTypography="Body"
                    Text="DLL File Path" />
            </ui:CardControl.Header>
            <StackPanel Orientation="Horizontal">
                <ui:Button
                    Command="{Binding ViewModel.SelectDllPathCommand}"
                    Content="Select"
                    Width="100"
                    Margin="0,0,10,0" />
                <ui:TextBox
                    Width="300"
                    IsReadOnly="True"
                    PlaceholderText="Select a DLL file path"
                    Text="{Binding ViewModel.DllPath}"
                    VerticalAlignment="Center" />
            </StackPanel>
        </ui:CardControl>

        <ui:CardControl
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Icon="{ui:SymbolIcon PlugConnected24}">
            <ui:CardControl.Header>
                <ui:TextBlock
                    FontTypography="Body"
                    Text="Automatic Injection" />
            </ui:CardControl.Header>
            <ui:ToggleSwitch
                IsChecked="{Binding ViewModel.AutoInject, Mode=TwoWay}"
                OnContent="On"
                OffContent="Off" />
        </ui:CardControl>

        <ui:CardControl
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Icon="{ui:SymbolIcon Hourglass24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        FontTypography="Body"
                        Text="Injection Delay" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="Delay in seconds before the DLL file gets injected" />
                </Grid>
            </ui:CardControl.Header>
            <ui:NumberBox
                Value="{Binding ViewModel.InjectionDelay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                Minimum="0"
                PlaceholderText="Enter delay"
                MaxDecimalPlaces="0" />
        </ui:CardControl>

        <ui:Button
            Command="{Binding ViewModel.InjectCommand}"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Width="200"
            Height="50"
            Margin="0,0,0,50"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="Inject"
            Appearance="Primary"/>

        <ui:TextBlock
            Text="{Binding ViewModel.Status}"
            TextWrapping="Wrap"
            x:Name="StatusTextBlock"
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,0,0,50"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />
    </Grid>
</Page>
